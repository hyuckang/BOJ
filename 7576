#include<iostream>
#include<queue>
#include<cstring>
using namespace std;
int N, M, tomato_cnt = 0, min_time = 987654321;
int map[1011][1011], vist[1011][1011];
int dr[] = {-1, 1, 0, 0}, dc[] = {0, 0, -1, 1};
queue<pair<int, int>> Q;

void solve()
{
    memset(vist, -1, sizeof(vist));
    int vist_tomato = 0, time = 0;
    while(!Q.empty)
    {
        pair<int, int> cur = Q.front(); Q.pop();
        if(map[cur.first][cur.second] == 0) vist_tomato++;
        
        for(int dir=0; dir<4; dir++)
        {
            int nr = cur.first + dr[dir];
            int nc = cur.second + dc[dir];
            if(nr < 0 || nr >= N || nc < 0 || nc >= M) continue;
            if(map[nr][nc] == -1 || vist[nr][nc]) continue;
            
            vist[nr][nc] = vist[cur.first][cur.second] + 1;
            Q.push(make_pair(nr, nc));
        }
    }

}
void input()
{
    cin>>N>>M;
    for(int i=0; i<N; i++)
    {
        for(int j=0; j<M; j++)
        {
            cin>>map[i][j];
            if(map[i][j] == 0) tomato_cnt++;
            else if(map[i][j] == 1)
            {
                Q.push(make_pair(i, j));
                vist[i][j] == 0;
            }
        }
    }
}
int main()
{
    input();
    solve();
    return 0;
}
